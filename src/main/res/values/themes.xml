<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fill_Me" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/jaune_pale</item>
        <item name="colorPrimaryVariant">@color/beige</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/saumon</item>
        <item name="colorSecondaryVariant">@color/vert_pale</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/vert_pale</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/saumon</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- TextView -->
    <style name="Base.Widget.AppCompat.TextView.MyTextView" parent="Theme.Fill_Me">
        <item name="android:textColor">@color/jaune_pale</item>
    </style>

    <!-- EditText -->
    <style name="Base.Widget.AppCompat.EditText.MyEditText" parent="Theme.Fill_Me">
        <item name="android:textColor">@color/jaune_pale</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Button -->
    <style name="Base.Widget.AppCompat.Button.MyButton" parent="Theme.Fill_Me">
        <item name="android:colorAccent">@color/grey</item>
        <item name="android:textColor">@color/vert_pale</item>
    </style>


</resources>